# 애플리케이션 설정
APP_NAME=KoreanForYou
DEBUG=False
VERSION=1.0.0

# 서버 설정
HOST=0.0.0.0
PORT=8000

# 데이터베이스 설정
DATABASE_URL=postgresql://user:password@localhost:5432/koreanforyou
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# JWT 설정
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS 설정 (콤마 구분 또는 ["*"] 형식)
ALLOWED_HOSTS=["*"]

# 외부 API 설정
TTS_API_URL=https://api.example.com/tts
TTS_API_KEY=your-tts-api-key
STT_API_URL=https://api.example.com/stt
STT_API_KEY=your-stt-api-key
LLM_API_URL=https://api.example.com/llm
LLM_API_KEY=your-llm-api-key

# AWS S3 설정 (옵션)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-northeast-2
S3_BUCKET_NAME=your-s3-bucket-name

# Redis 설정 (옵션)
REDIS_URL=redis://localhost:6379/0

# 이메일 설정 (옵션)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# RTZR 설정 
RETURN_ZERO_CLIENT_ID=리턴제로키
RETURN_ZERO_CLIENT_SECRET=리턴제로키
